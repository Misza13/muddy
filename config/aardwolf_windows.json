{
  "name": "aardwolf_windows",
  "description": "Standard window setup for Aardwolf MUD",
  "root": {
    "type": "VerticalStackLayout",
    "layouts": ["1*", "1"],
    "elements": [
      {
        "type": "HorizontalStackLayout",
        "layouts": ["2*", "30", "1*"],
        "elements": [
          {
            "type": "BufferedTextWindow",
            "name": "MainWindow"
          },
          {
            "type": "VerticalStackLayout",
            "layouts": ["18", "1*"],
            "elements": [
              {
                "type": "StaticWindow",
                "name": "MinimapWindow"
              },
              {
                "type": "StaticWindow",
                "name": "StatsWindow"
              }
            ]
          },
          {
            "type": "BufferedTextWindow",
            "name": "ChatWindow"
          }
        ]
      },
      {
        "type": "InputWindow",
        "name": "InputWindow"
      }
    ]
  }
}